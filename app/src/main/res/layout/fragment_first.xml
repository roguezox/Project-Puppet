<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#665252"
    tools:context=".FirstFragment"
    android:tag="first_fragment">
    <Switch
        android:id="@+id/connect"
        android:layout_width="144dp"
        android:layout_height="65dp"
        android:layout_marginStart="142dp"
        android:layout_marginEnd="125dp"
        android:text="Connect"
        android:textColor="#FFFFFF"
        android:thumbTint="#FFFFFF"
        android:trackTint="#0048FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.858" />

    <TextView
        android:id="@+id/control"
        android:layout_width="83dp"
        android:layout_height="39dp"
        android:text="@string/control"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/turnoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="179dp"
        android:layout_marginTop="265dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="96dp"
        android:backgroundTint="#15DF29"
        android:clickable="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/mainbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/clipboard"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_stop_screen_share_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="292dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="190dp"
        android:backgroundTint="#15DF29"
        android:clickable="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainbutton"
        app:srcCompat="@drawable/ic_baseline_lock_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="174dp"
        android:layout_marginBottom="190dp"
        android:backgroundTint="#15DF29"
        android:clickable="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainbutton"
        app:srcCompat="@drawable/ic_baseline_volume_off_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/mainbutton"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="178dp"
        android:layout_marginEnd="178dp"
        android:backgroundTint="#0680D2"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_add" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/clipboard"
        android:layout_width="51dp"
        android:layout_height="54dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="297dp"
        android:layout_marginBottom="96dp"
        android:backgroundTint="#15DF29"
        android:clickable="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/mainbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_sharp_create_24" />

</androidx.constraintlayout.widget.ConstraintLayout>